<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
  <link rel="stylesheet" href="/css/index/mobile_style.css" />
  <link rel="stylesheet" href="/css/index/desktop_style.css" />
  <link rel="stylesheet" href="/css/index/tablet_style.css" />
  <link rel="stylesheet" href="/css/index/smphone_style.css" />
  <link rel="stylesheet" href="/css/login.css" />
</head>

<body>
  <!-- Navbar -->
  <%- include('./partials/navbar.ejs') %>
  <!-- End of navbar -->

  <div class="jumbotron jumbotron-fluid d-flex align-items-center loginForm" id="newslettercontent">
    <div class="container">
      <div class="row d-flex">
        <div class="col-md-6 offset-md-6 text-left">
          <form action="/auth/login" method="POST">
            <div class="errorLog">
              <% if(validateError) { %>
              <%= validateError %>
              <% } %>
            </div>
            <div class="form-group">
              <label for="username">USERNAME</label>
              <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username"
                required>
              <label for="password">PASSWORD</label>
              <input type="password" class="form-control" id="password" name="password"
                placeholder="Enter your password" required>
            </div>
            <button type="submit" class="btn btn-warning loginSubmit" id="loginSubmit">LOGIN</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <%- include('./partials/navigation.ejs') %>
  <!-- Navigation -->
  <!-- Footer -->
  <%- include('./partials/footer.ejs') %>
  <!-- End of Footer -->
  </div>
</body>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<%- include('./partials/bootstrapScripts.ejs') %>

</html>