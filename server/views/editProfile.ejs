<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
  <link rel="stylesheet" href="/css/profile.css" />
</head>

<body>
  <!-- Navbar -->
  <%- include('./partials/navbar.ejs') %>
  <!-- End of navbar -->

  <div class="jumbotron jumbotron-fluid d-flex align-items-center profile" id="newslettercontent">
    <div class="container">
      <div class="row d-flex">
        <div class="col-md-8 text-left">
          <a href="/profile">
            <button type="button" class="btn btn-sm btn-warning"><strong>BACK TO PROFILE</strong></button>
          </a>
          <br>
          <h1>EDIT PROFILE</h1>
          <form action="/profile/edit?_method=PATCH" method="POST">
            <div class="errorLog">
              <% if(validateError) { %>
              <%= validateError %>
              <% } %>
            </div>
            <div class="form-group row">
              <label for="name" class="col-sm-2 col-form-label">Name</label>
              <div class="col-md-8">
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Full Name">
              </div>
            </div>
            <fieldset class="form-group">
              <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                <div class="col-md-8">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="genderNull" value="null">
                    <label class="form-check-label" for="genderNull">
                      Not Specified
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="genderMale" value="m">
                    <label class="form-check-label" for="genderMale">
                      Male
                    </label>
                  </div>
                  <div class="form-check disabled">
                    <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="f">
                    <label class="form-check-label" for="genderFemale">
                      Female
                    </label>
                  </div>
                </div>
              </div>
            </fieldset>
            <div class="form-group row">
              <label for="dob" class="col-sm-2 col-form-label">Birthday</label>
              <div class="col-md-8">
                <input type="date" class="form-control" id="dob" name="dob" placeholder="Birthday">
              </div>
            </div>
            <div class="form-group row">
              <label for="status" class="col-sm-2 col-form-label">Status</label>
              <div class="col-md-8">
                <input type="text" class="form-control" id="status" name="status" placeholder="Status">
              </div>
            </div>
            <button type="submit" class="btn btn-success editProfileSubmit"
              id="editProfileSubmit"><strong>SUBMIT</strong></button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <%- include('./partials/navigation.ejs') %>
  <!-- Navigation -->
  <!-- Footer -->
  <%- include('./partials/footer.ejs') %>
  <!-- End of Footer -->
  </div>

  <%- include('./partials/bootstrapScripts.ejs') %>
</body>

</html>