<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head.ejs') %>
  <link rel="stylesheet" href="/css/signup.css" />
</head>

<body>
  <!-- Navbar -->
  <%- include('./partials/navbar.ejs') %>
  <!-- End of navbar -->

  <div class="jumbotron jumbotron-fluid d-flex align-items-center signupForm" id="newslettercontent">
    <div class="container">
      <div class="row d-flex">
        <div class="col-md-6 offset-md-6 text-left">
          <form action="/auth/signup" method="POST">
            <div class="errorLog">
              <% if(validateError) { %>
              <%= validateError %>
              <% } %>
            </div>
            <div class="form-group">
              <label for="name">FULL NAME</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
              <label for="email">EMAIL ADDRESS</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              <label for="username">USERNAME</label>
              <input type="text" class="form-control" id="username" name="username"
                placeholder="Enter your desired username" required>
              <label for="password">PASSWORD</label>
              <input type="password" class="form-control" id="password" name="password"
                placeholder="Enter your password" required>
              <small id="passwordHelpBlock" class="form-text text-muted">
                Your password must be 8-30 characters long, contain letters and numbers, and must not contain spaces,
                special characters, or emoji.
              </small>
              <label for="repeatPassword">REPEAT PASSWORD</label>
              <input type="password" class="form-control" id="repeatPassword" name="repeatPassword"
                placeholder="Enter your password again" required>
            </div>
            <button type="submit" class="btn btn-warning signupSubmit" id="signupSubmit">REGISTER</button>
            <a href="/auth/login">
              <button type="button" class="btn btn-warning login" id="login">LOGIN</button>
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <%- include('./partials/navigation.ejs') %>
  <!-- Navigation -->
  <!-- Footer -->
  <%- include('./partials/footer.ejs') %>
  <!-- End of Footer -->
  </div>

  <%- include('./partials/bootstrapScripts.ejs') %>
</body>

</html>